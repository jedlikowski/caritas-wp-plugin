{
  "name": "indicoplus/caritas-wp-plugin",
  "type": "project",
  "version": "1.4.3",
  "minimum-stability": "dev",
  "description": "",
  "config": {
    "preferred-install": "dist"
  },
  "require": {
    "php": ">=7.1",
    "yahnis-elsts/plugin-update-checker": "^4.9",
    "tightenco/collect": "dev-master",
    "jedlikowski/wordpress-router": "dev-master"
  },
  "autoload": {
    "psr-4": {
      "IndicoPlus\\CaritasApp\\": "lib/"
    }
  },
  "scripts": {
    "prepare-release": [
      "rm -rf release",
      "zip -r -X release.zip . -x \"*.git*\" -x \"node_modules*\" -x \"src*\" -x \"*.DS_Store\" -x \"*release/*\" ",
      "mkdir release",
      "unzip release.zip -d ./release/caritas-wp-plugin",
      "rm release.zip",
      "cd release && zip -r -X \"caritas-wp-plugin-$(jq \".version\" ../composer.json | tr -d '\"').zip\" ./caritas-wp-plugin -x \"*.git*\" -x \"*.DS_Store\" ",
      "cd release && rm -rf caritas-wp-plugin"
    ]
  }
}
